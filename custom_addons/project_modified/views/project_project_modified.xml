<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

        <record id="project_project_modified_inherit_form" model="ir.ui.view">
            <field name="name">project.project.modified.inherit.form</field>
            <field name="model">project.project</field>
            <field name='inherit_id' ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="requisitions" type="object" string="Meterial Requisition"/>
                </xpath>

                <xpath expr="//header" position="inside">
                    <button name="show_rfqs" type="object" class="oe_highlight" string="Show RFQs"/>
                </xpath>

                <xpath expr="//field[@name='currency_id']" position="after">
                    <!--                    <button name="show_rfqs" type="object" class="oe_highlight" string="Show RFQs"/>-->
                    <button class="oe_stat_button" type="object" icon="fa-book"
                            name="show_rfqs">
                        <field name="rfc_count" string="RFQs" widget="statinfo"/>
                    </button>
                </xpath>

                <xpath expr="//page[@name='settings']" position="after">
                    <page name="cost_estimation" string="Cost Estimation">
                        <field name = 'estimation_line_ids'/>
                    </page>
                    <page name="real_cost" string="Real Cost">

                    </page>
                </xpath>

            </field>
        </record>

    </data>
</odoo>

