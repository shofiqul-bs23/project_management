<odoo>
    <record id="requisition_form" model="ir.ui.view">
        <field name="name">requisition.form</field>
        <field name="model">custom.requisition</field>
        <field name="arch" type="xml">
            <form string="Requisition Form">
                <header>
                    <button name="requisitions" string="Request Purchase Order" type="object" class="oe_highlight"/>

                    <button name="create_internal_transfer" string="Request Internal Transfer" type="object" class="oe_highlight"/>

                    <field name="state" widget="statusbar" clickable="True"></field>
                </header>
                <sheet>
                    <group>
<!--                        <field name="state"/>-->
                        <field name="project_id" readonly="1"/>
                    </group>

                    <notebook>
                        <page name="products" string="Products">
                            <field name="requisition_line_ids"/>
                        </page>
                        <page name="purchase_orders" string="Purchase Orders">
                            <field name="purchase_order_ids"/>
                        </page>

                    </notebook>


                </sheet>

            </form>
        </field>
    </record>



     <record id="requisition_tree" model="ir.ui.view">
        <field name="name">requisition.tree</field>
        <field name="model">custom.requisition</field>
        <field name="arch" type="xml">
            <tree string="Requisition Tree">
                <field name="id"/>
                <field name="display_name"/>
                <field name="state"/>

            </tree>
        </field>
    </record>
</odoo>

