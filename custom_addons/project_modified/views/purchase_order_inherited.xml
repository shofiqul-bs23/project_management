<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="purchase_order_inherit_form" model="ir.ui.view">
            <field name="name">purchase.order.inherit.form</field>
            <field name="model">purchase.order</field>
            <field name='inherit_id' ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="before">
                    <field name = "project_id" string="Project"/>
                </xpath>

                <xpath expr="//button[@name='button_approve']" position="after">
                    <button name="request_internal_transfer" type="object" states="to approve" string="Request for Internal Transfer" class="oe_highlight" groups="purchase.group_purchase_manager" data-hotkey="z"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>

