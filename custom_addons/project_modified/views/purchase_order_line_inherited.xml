<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="purchase_order_line_inherit_tree_project_modified" model="ir.ui.view">
            <field name="name">purchase.order.line.inherit.tree</field>
            <field name="model">purchase.order</field>
            <field name='inherit_id' ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="after">
                    <field name="estimation_line" string="Estimation Line" invisible="1"/>
                    <field name="requisition_line_id" string="Requisition Line" invisible="1"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
